<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
    />
    <link rel="stylesheet" type="text/css" href="css/style.css" />
  </head>

  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!-- <link rel="stylesheet" href="/style.css"> -->

  <body>
    <div class="app-fuel">
      <form action="/profile" method="POST">
        <h2 class="text-center">Profile</h2>
        <div class="form-group">
          <input
            type="text"
            class="form-control"
            placeholder="Fullname"
            required="required"
            maxlength="50"
            id="name"
            name="name"
            value="<%= profile.name %>"
          />
        </div>
        <div class="form-group">
          <input
            type="text"
            class="form-control"
            placeholder="Address 1"
            required="required"
            maxlength="100"
            id="address"
            name="address"
            value="<%= profile.address %>"
          />
        </div>
        <div class="form-group">
          <input
            type="text"
            class="form-control"
            placeholder="Address 2 (Option)"
            maxlength="100"
            id="address2"
            name="address2"
            value="<%= profile.address2 %>"
          />
        </div>
        <div class="form-group">
          <input
            type="text"
            class="form-control"
            placeholder="City"
            required="required"
            maxlength="50"
            id="city"
            name="city"
            value="<%= profile.city %>"
          />
        </div>
        <div class="form-group">
          <select
            name="state"
            id="state"
            value="<%= profile.state %>"
            class="form-control"
          >
            <option value="" disabled selected>State</option>
            <option value="TX">TX</option>
            <option value="LA">LA</option>
            <option value="NY">NY</option>
            <option value="AK">AK</option>
            <option value="AZ">AZ</option>
          </select>
        </div>
        <div class="form-group">
          <input
            type="number"
            class="form-control"
            placeholder="Zipcode"
            required="required"
            minlength="5"
            maxlength="9"
            id="zipcode"
            name="zipcode"
            value="<%= profile.zipcode %>"
          />
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary btn-block">
            Update
          </button>
        </div>
      </form>
    </div>
  </body>
</html>
