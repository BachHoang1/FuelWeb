<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
    />
    <link rel="stylesheet" type="text/css" href="css/style.css" />
  </head>

  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!-- <link rel="stylesheet" href="/style.css"> -->

  <body>
    <div class="app-fuel">
      <form action="/quote" method="POST">
        <h2 class="text-center">Fuel Quote</h2>
        <div class="form-group">
          <label for="gallons">Gallons</label>
          <input
            id="gallons"
            name="gallons"
            type="number"
            class="form-control"
            placeholder="Required"
            required="required"
          />
        </div>
        <div class="form-group">
          <label for="deliveryAddress">Delivery Address</label>
          <input
            id="deliveryAddress"
            name="deliveryAddress"
            disabled
            type="text"
            class="form-control"
            placeholder="Delivery Address"
            value="<%= user.profile.address %>, <%= user.profile.city %> <%= user.profile.state %> <%= user.profile.zipcode %>"
          />
        </div>
        <div class="form-group">
          <label for="deliveryAddress">Delivery Date</label>
          <input
            id="deliveryDate"
            name="deliveryDate"
            type="date"
            class="form-control"
            placeholder="Delivery Date"
            required="required"
          />
        </div>
        <div class="form-group">
          <label for="suggestedPrice">Suggested Price</label>
          <input
            id="suggestedPrice"
            name="suggestedPrice"
            type="number"
            class="form-control"
            placeholder="Required"
            required="required"
          />
        </div>
        <div class="form-group">
          <label for="amountDue">Total Amount Due</label>
          <input
            disabled
            id="amountDue"
            name="amountDue"
            type="number"
            class="form-control"
            value="0.01"
          />
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary btn-block">
            Calculate
          </button>
        </div>
      </form>
    </div>
  </body>
</html>
